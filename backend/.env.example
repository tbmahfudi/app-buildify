# Application
APP_NAME="NoCode App"
SECRET_KEY="change-me-in-production-use-openssl-rand-hex-32"
ACCESS_TOKEN_EXPIRE_MIN=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (choose one)
# SQLite (dev)
SQLALCHEMY_DATABASE_URL=sqlite:///./app.db

# PostgreSQL
# SQLALCHEMY_DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/appdb

# MySQL
# SQLALCHEMY_DATABASE_URL=mysql+pymysql://user:password@localhost:3306/appdb

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ========== SECURITY POLICIES ==========
# Note: These are system-wide defaults. Superadmins can override per-tenant in the database.

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL_CHAR=true
PASSWORD_MIN_UNIQUE_CHARS=4
PASSWORD_MAX_REPEATING_CHARS=3
PASSWORD_ALLOW_COMMON=false
PASSWORD_ALLOW_USERNAME=false
PASSWORD_HISTORY_COUNT=5
PASSWORD_EXPIRATION_DAYS=90
PASSWORD_EXPIRATION_WARNING_DAYS=14
PASSWORD_GRACE_LOGINS=3

# Account Lockout Policy
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MIN=15
LOGIN_LOCKOUT_TYPE=progressive  # 'fixed' or 'progressive'
LOGIN_RESET_ATTEMPTS_AFTER_MIN=60
LOGIN_NOTIFY_USER_ON_LOCKOUT=true

# Session Security Policy
SESSION_TIMEOUT_MINUTES=30
SESSION_ABSOLUTE_TIMEOUT_HOURS=8
SESSION_MAX_CONCURRENT=3  # 0 = unlimited
SESSION_TERMINATE_ON_PASSWORD_CHANGE=true
SESSION_REQUIRE_REAUTH_FOR_SENSITIVE=true
SESSION_REAUTH_TIMEOUT_MINUTES=15

# Password Reset Policy
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
PASSWORD_RESET_MAX_ATTEMPTS=3
PASSWORD_RESET_REQUIRE_CURRENT=true
PASSWORD_RESET_NOTIFY_USER=true
