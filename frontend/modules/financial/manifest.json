{
  "name": "financial",
  "display_name": "Financial Management",
  "version": "1.0.0",
  "description": "Financial management user interface",

  "entry_point": "module.js",

  "routes": [
    {
      "path": "#/financial/dashboard",
      "name": "Financial Dashboard",
      "component": "pages/dashboard-page.js",
      "permission": "financial:accounts:read:company",
      "menu": {
        "label": "Financial",
        "icon": "ph-duotone ph-currency-circle-dollar",
        "order": 10,
        "parent": null
      }
    },
    {
      "path": "#/financial/accounts",
      "name": "Chart of Accounts",
      "component": "pages/accounts-page.js",
      "permission": "financial:accounts:read:company",
      "menu": {
        "label": "Accounts",
        "icon": "ph-duotone ph-chart-bar",
        "order": 11,
        "parent": "financial"
      }
    },
    {
      "path": "#/financial/invoices",
      "name": "Invoices",
      "component": "pages/invoices-page.js",
      "permission": "financial:invoices:read:company",
      "menu": {
        "label": "Invoices",
        "icon": "ph-duotone ph-receipt",
        "order": 12,
        "parent": "financial"
      }
    },
    {
      "path": "#/financial/payments",
      "name": "Payments",
      "component": "pages/payments-page.js",
      "permission": "financial:payments:read:company",
      "menu": {
        "label": "Payments",
        "icon": "ph-duotone ph-credit-card",
        "order": 13,
        "parent": "financial"
      }
    },
    {
      "path": "#/financial/reports",
      "name": "Financial Reports",
      "component": "pages/reports-page.js",
      "permission": "financial:reports:read:company",
      "menu": {
        "label": "Reports",
        "icon": "ph-duotone ph-chart-line-up",
        "order": 14,
        "parent": "financial"
      }
    }
  ],

  "navigation": {
    "primary_menu": true,
    "dashboard_widgets": [
      {
        "id": "financial_summary",
        "name": "Financial Summary",
        "component": "components/financial-widget.js",
        "size": "large",
        "permission": "financial:accounts:read:company"
      }
    ]
  },

  "dependencies": {
    "core_version": ">=1.0.0",
    "required_modules": [],
    "optional_modules": []
  },

  "assets": {
    "css": [],
    "icons": []
  }
}
